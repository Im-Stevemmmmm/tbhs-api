generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Player {
    uuid    String   @id
    rank    String   @default("noob")
    PitData PitData?
}

model PitData {
    player_uuid String @id
    prestige    Int    @default(1)
    level       Int    @default(1)
    xp          Int    @default(0)
    gold        Int    @default(0)
    Player      Player @relation(fields: [player_uuid], references: [uuid])
}
